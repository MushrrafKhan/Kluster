<% layout('./../layouts/default') -%>
    <div class="row">
        <div class="col-12">
            <div class="widget pad30-65">
                <h4 class="font-20 mb-30">Edit romantiks </h4>
                <form method="post" action="/romantiks/updateData/<%=userdata._id%>" enctype="multipart/form-data"
                    id="editPage">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group mb-3">
                                <label for="formFile" class="form-label">Upload Gif</label>
                                <input class="form-control" type="file" id="formFile" name="video">
                            </div>
                        </div>
                        <div class="form-group mb-3 col-lg-6">
                            <label>GIF Name:</label>
                            <input type="text" name="title" class="form-control" id="title" placeholder="GIF Name"
                                autocomplete="off" value="<%=userdata.title %>" required>
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <div class="form-group mb-3 text-center">
                            <button id="submitProfileForm" type="submit"
                                class="btn btn-primary waves-effect waves-light">update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script>
        $("#editPage").validate({
            rules: {
                title: {
                    required: true,
                },
            },
            messages: {
                title: {
                    required: '<p style="color:red;">required</p>',
                },
            },
            submitHandler: function (form) {
                form.submit();
            },
        });
    </script>