<% layout('./../layouts/default') -%>
<div class="row">
    <div class="col-12">
        <div class="widget pad30-65">
            <h4 class="font-30 mb-30">View Romantiks </h4>
            <div class="row">
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <!-- <video width="400px" height="400px" controls>
                        <source src="<%=url%>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>  -->
                    <img style="width: 250px; height: 250px;  border: 1px solid #d3d3d3"
                         src="<%=url%>"
                         alt="<%= user.title %>" class="img-fluid mt-3">

                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Title: </label> <%= user.title %>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="form-group mb-3">
                        <label>Status: </label> <%- user.isSuspended ? '<span class="badge label-table badge-secondary">In-Active</span>':'<span class="badge label-table badge-success">Active</span>'  %>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</div>