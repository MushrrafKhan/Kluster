<% layout('./../layouts/default') -%>
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card-body pt-3 widget">
                <h4 class="font-30 mb-30">Add Romantiks GIF</h4>
                <form method="POST" id="addRomantiksPage" action="/romantiks/save" class="mt-1 login-input"
                    enctype="multipart/form-data">
                    <div class="row p-3">
                        <div class="form-group mb-3 col-lg-7">
                            <label>GIF Name:<span class="text-danger">*</span></label>
                            <input type="text" name="title" class="form-control" id="title" placeholder="Title"
                                autocomplete="off">
                            <label class="error" for="title"></label>
                        </div>
                        <div class="form-group mb-3 col-lg-7">
                            <label>GIF<span class="text-danger">*</span></label>
                            <input type="file" name="video" id="video" class="form-control" />
                            <div>
                                <label class="error" for="video"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <div class="form-group mb-3 text-center">
                            <button id="submitProfileForm" type="submit"
                                class="btn btn-primary waves-effect waves-light">ADD
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script>
        $("#addRomantiksPage").validate({
            rules: {
                title: {
                    required: true,
                },
                video: {
                    required: true,
                },
            },
            messages: {
                title: {
                    required: '<p style="color:red;">required</p>',
                },
                video: {
                    required: '<p style="color:red;">required</p>',
                },
            },
            submitHandler: function (form) {
                form.submit();
            },
        });
    </script>