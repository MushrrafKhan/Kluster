<% layout('./../layouts/default') -%>
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card-body pt-3 widget">
                <h4 class="font-30 mb-30">Game Hint Video</h4>
                <div class="col-lg-12 " style="padding-bottom: 15px;">
                    <video width="400px" height="400px" controls>
                        <source src="<%=url%>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video> 

                </div>
                <form method="POST" id="editHintVideo" action="/game/editHintVideo/<%=_id%>" class="mt-1 login-input"
                    enctype="multipart/form-data">
                    <div class="row p-3">
                        
                        <div class="form-group mb-3 col-lg-7">
                            <label>Video<span class="text-danger">*</span></label>
                            <input type="file" name="video" id="video" class="form-control" />
                            <div>
                                <label class="error" for="video"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <div class="form-group mb-3 text-center">
                            <button id="editHintVideoForm" type="submit"
                                class="btn btn-primary waves-effect waves-light">Upadte
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script>
        $("#editHintVideo").validate({
            rules: {
                
                video: {
                    required: true,
                },
            },
            messages: {
                
                video: {
                    required: '<p style="color:red;">required</p>',
                },
            },
            submitHandler: function (form) {
                form.submit();
            },
        });
    </script>